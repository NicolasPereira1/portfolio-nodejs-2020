        <script>

           let listeCartes = ["1C","1P","1S","1T","DC","DP","DS","DT","RC","RP","RT","RS","VC","VP","VS","VT","XC","XP","XS","XT"];
            let carte1 = "", carte2 = "";
            let flag = 0;
            let score = 0;

            function clickCard (name) {
                if(flag < 2){
                    flag++;
                    document.getElementById(name).src = "./resources/cartespng/" + name + ".png";
                    if(flag == 1)
                        carte1 = name;
                    if(flag == 2)
                        carte2 = name;
                    setTimeout(() => {
                        if(flag == 2){
                            score++;
                            document.getElementById("score").innerHTML = `Votre score est : ${score}`
                            flag = 0;
                            if(match(carte1,carte2)){
                                document.getElementById(carte1).src = "";
                                document.getElementById(carte2).src = "";
                            }else{
                                document.getElementById(carte1).src = "./resources/cartespng/backside.png";
                                document.getElementById(carte2).src = "./resources/cartespng/backside.png";
                            }
                        }
                    }, 1500);
                }
            }

            function debut () {
                document.write("<table>");
                shuffle(listeCartes);
                let i = 0;
                while(i<listeCartes.length){
                    document.write("<tr>");
                    for(let j=0; j<4; j++){
                        let id = listeCartes[i];
                        let cell = `<td>   <img id="${id}" src="./resources/cartespng/backside.png" onClick="clickCard('${id}')">  </td>`;
                        document.write(cell);
                        i++;
                    }
                    document.write("</tr>");
                }
                document.write("</table>");
            }

            function refresh(){
                location.reload();
            }
            
            function shuffle(a) {
                var j, x, i;
                for (i = a.length - 1; i > 0; i--) {
                    j = Math.floor(Math.random() * (i + 1));
                    x = a[i];
                    a[i] = a[j];
                    a[j] = x;
                }
            }

            function match(carte1, carte2) {
                if(carte1.substring(0,1) == carte2.substring(0,1))
                    return couleurOk(carte1.substring(1,2), carte2.substring(1,2));
                return false;
            }

            function couleurOk(couleur1, couleur2){
                if(
                    (couleur1 == 'C' && couleur2 == 'S') || (couleur1 == 'S' && couleur2 == 'C') ||
                    (couleur1 == 'P' && couleur2 == 'T') || (couleur1 == 'T' && couleur2 == 'P')
                    ){
                        return true;
                    }
                return false;
            }
